<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Billetterie du Musée du Louvre{% endblock %}</title>

        {% block stylesheets %}
        <link rel="stylesheet"  href="{{ asset('css/style.css') }}"/>
        {#chargement du css Bootstrap via cdn#}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

        {% endblock %}
    </head>

    <body>
    <div class="container" id="container-content">
        <div id="header" class="row">
            <div class="col-sm-6">
                <img id="logo_entete" src="{{ asset('images/Louvre-logo.png') }}" alt="logo louvre" class="img-responsive">
            </div>
            <div class="col-sm-6">
                <div id="titre" class="col-sm-12">
                    <h1>Billetterie en Ligne du Musée du Louvre</h1>
                </div>
            </div>
        </div>
        <hr class="border">

        <div  id="media_menu_bar" class="row">
            <nav  class="navbar navbar-default">
                <ul class="nav nav-pills">
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Menu <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="navi" href="{{ path('louvre_ticket_step_1') }}">1 - Choix du billet</a>
                            </li>
                            <li>
                                <a class="navi" href="{{ path('louvre_ticket_step_2') }}">2 - Saisie des informations</a>
                            </li>
                            <li>
                                <a class="navi" href="{{ path('louvre_ticket_step_3') }}">3 - Récapitulatif - Paiement</a>
                            </li>
                            <li>
                                <a class="navi" href="{{ path('louvre_ticket_step_4') }}">4 - Confirmation de paiement - Email</a>
                            </li>
                            <li></li>
                            <li>
                                <a id="back-button" class="btn btn-lg navi" href="http://www.louvre.fr">Retour au site du Musée</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>



        <hr class="border">

        {#<div class="row">#}
            <div id="menu" class="col-sm-3">
                <ul class="nav nav-pills nav-stacked">
                    <li>
                        <a class="navi" href="{{ path('louvre_ticket_step_1') }}">1 - Choix du billet</a>
                    </li>
                    <li>
                        <a class="navi" href="{{ path('louvre_ticket_step_2') }}">2 - Saisie des informations</a>
                    </li>
                    <li>
                        <a class="navi" href="{{ path('louvre_ticket_step_3') }}">3 - Récapitulatif - Paiement</a>
                    </li>
                    <li>
                        <a class="navi" href="{{ path('louvre_ticket_step_4') }}">4 - Confirmation de paiement - Email</a>
                    </li>
                    <li></li>
                    <li>
                        <a id="back-button" class="btn btn-lg navi" href="http://www.louvre.fr">Retour au site du Musée</a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-9" id="content">
                {% block body %}
                {% endblock %}
            </div>
        {#</div>#}

        <hr class="border">

        <footer class="row">
            <div class="col-sm-offset-4 col-sm-4" id="cgv">
                <a href="{{ path('louvre_ticket_cgv') }}">CGV</a>
            </div>
            <div class="col-sm-4" id="tarifs">
                <a href="{{  path('louvre_ticket_tarifs') }}">Tarifs</a>
            </div>
        </footer>
    </div>

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    {% endblock %}

    </body>
</html>